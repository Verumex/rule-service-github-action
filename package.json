{
  "name": "verumex-rule-service-github-action",
  "version": "1.0.1",
  "description": "Run a VmX rule service execution in your Github Actions CI pipeline",
  "private": true,
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Verumex/rule-service-github-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "Verumex"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/parser": "^4.8.1",
    "@vercel/ncc": "^0.28.0",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.0",
    "jest-circus": "^27.0.0",
    "js-yaml": "^3.14.0",
    "prettier": "2.3.0",
    "ts-jest": "^27.0.0",
    "typescript": "^4.1.3"
  }
}
